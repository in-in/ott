{
  "name": "newla",
  "config": {
    "stylelint": ".stylelintrc.json",
    "stylelintignore": ".config/.stylelintignore"
  },
  "scripts": {
    "init-start": "npm i && rimraf .git/ && git init",
    "start": "npm-run-all build -p watch serve --silent",
    "clean": "rimraf dist/",
    "build": "npm-run-all clean build:* image",
    "prebuild:css": "npm-run-all lint:css",
    "prebuild:pug": "npm-run-all lint:pug",
    "build:pug": "pug -b src src/*.pug -o dist/",
    "build:css": "postcss -c .config/postcss.config.js src/styles/*.css -d dist ",
    "build:js": "cp src/scripts/script.js dist/",
    "image": "npm-run-all image:*",
    "image:optim": "imagemin src/assets/images/* --out-dir=dist/assets/images",
    "image:svg": "svg-sprite -C .config/svg-sprite.json src/assets/svg/*.svg",
    "lint": "npm-run-all lint:*",
    "lint:pug": "pug-lint -c .config/.pug-lintrc.json src/",
    "lint:css": "stylelint 'src/**/*.css' -i $npm_package_config_stylelintignore --config $npm_package_config_stylelint",
    "watch": "npm-run-all -p watch:*",
    "watch:pug": "chokidar 'src/**/*.pug' -c 'npm run build:pug'",
    "watch:css": "chokidar 'src/**/*.css' -i 'src/styles/lib' -c 'npm run build:css'",
    "watch:js": "chokidar 'src/scripts/*.js' -c 'npm run build:js'",
    "watch:image": "chokidar 'src/assets/images/*' -c 'npm run image:optim'",
    "watch:svg": "chokidar 'src/assets/svg/*.svg' -c 'npm run image:svg'",
    "serve": "browser-sync start -c .config/bs-config.js -s 'dist' -f 'dist'",
    "ncu": "ncu"
  },
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "bemto.pug": "^2.1.0",
    "browser-sync": "^2.18.8",
    "chokidar-cli": "^1.2.0",
    "css-mqpacker": "^6.0.0",
    "imagemin-cli": "^3.0.0",
    "npm-check-updates": "^2.11.1",
    "npm-run-all": "^4.0.1",
    "postcss-assets": "^4.1.0",
    "postcss-cli": "^4.0.0",
    "postcss-color-function": "^3.0.0",
    "postcss-csso": "^2.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.0.0",
    "postcss-each": "^0.9.3",
    "postcss-easy-import": "^2.0.0",
    "postcss-media-minmax": "^3.0.0",
    "postcss-nested": "^2.0.2",
    "postcss-nested-ancestors": "^1.0.0",
    "postcss-pseudoelements": "^4.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.4.0",
    "rimraf": "^2.6.1",
    "stylelint": "^7.10.1",
    "svg-sprite": "^1.3.6"
  }
}
